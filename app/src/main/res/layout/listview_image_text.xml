<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_image_text"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cn.bingoogolapple.badgeview.BGABadgeImageView
            android:id="@+id/iv_image_textview_image"
            android:layout_width="@dimen/image_text_image_size"
            android:layout_height="@dimen/image_text_image_size"
            android:src="@drawable/default_user" />

        <TextView
            android:layout_marginLeft="@dimen/list_view_text_margin_left"
            android:id="@+id/iv_image_textview_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/list_view_textview_color" />
    </LinearLayout>
</LinearLayout>